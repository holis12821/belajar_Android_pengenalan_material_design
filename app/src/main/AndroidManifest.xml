<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.belajar_android_pengenalan_material_design">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:ignore="AllowBackup">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme_splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroActivity"
            android:label="@string/SplashScreen_onBoard"
            android:theme="@style/AppTheme_IntroActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/label_Register"
            android:theme="@style/AppTheme_Register"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/label_Login"
            android:theme="@style/AppTheme_Login" />
        <activity
            android:name=".ExpertActivity"
            android:label="@string/label_ExpertActivity"
            android:theme="@style/AppTheme_ExpertActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".ForgetPasswordActivity"
            android:label="@string/title_activity_Forget_Password"
            android:theme="@style/AppTheme_Forget_Password"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".StartActivity"
            android:theme="@style/AppTheme_Start"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ChangePasswordActivity"
            android:label="@string/title_changePassword"
            android:theme="@style/AppTheme_Change_Password"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".ChatActivity"
            android:label="@string/Chat"
            android:theme="@style/AppTheme_chat"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <activity android:name=".DetailDiagnosa"
            android:label="@string/detail_Diagnosa"
            android:theme="@style/AppTheme_detail_Diagnosa"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
    </application>

</manifest>