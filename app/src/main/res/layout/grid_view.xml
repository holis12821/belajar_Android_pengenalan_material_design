<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop_CardView"
        android:layout_marginBottom="@dimen/layout_marginBottom_CardView"
        android:layout_margin="@dimen/layout_margin_CardView"
        app:cardElevation="@dimen/cardElevation">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_marginLeft="@dimen/layout_marginLeft_ImageView"
                android:layout_marginTop="@dimen/layout_marginTop_ImageView"
                android:layout_marginBottom="@dimen/layout_marginBottom_ImageView"
                android:layout_width="@dimen/layout_width_ImageView"
                android:layout_marginRight="@dimen/layout_marginRight_ImageView"
                android:layout_height="@dimen/layout_height_ImageView"
                android:src="@drawable/icon"
                android:layout_marginStart="@dimen/layout_marginLeft_ImageView"
                android:layout_marginEnd="@dimen/layout_marginRight_ImageView"
                android:contentDescription="@string/ContentDescription_ImageView" />
            
            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:textSize="@dimen/textSize_name"
                android:textColor="@color/colorTextDefault"
                android:layout_marginTop="@dimen/layout_marginTop_Text_name"
                android:layout_toEndOf="@+id/icon"
                android:text="@string/textName"/>
            
            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_below="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_ImageView_thumbnail"
                android:background="@color/colorAccent"
                android:scaleType="fitXY"
                android:contentDescription="@string/ContentDescription_ImageView_thumbnail"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_Textview_status"
                android:layout_gravity="bottom"
                android:textSize="@dimen/textSize_status"
                android:text="@string/textTest"
                android:layout_marginLeft="@dimen/layout_marginLeft_TextView_status"
                android:layout_marginTop="@dimen/layout_marginTop_TextView_status"
                android:layout_marginBottom="@dimen/layout_marginBottom_TextView_status"
                android:layout_below="@id/img_thumbnail"
                android:textColor="@color/colorTextDefault"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/layout_marginLeft_TextView_status" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>