<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.StartActivity"
    android:background="@color/colorPrimaryDark">

    <include
        android:id="@+id/toolbar"
        layout="@layout/profile_bar_layout"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/layout_marginBottom_CardView_CircleImageView"
        app:cardCornerRadius="@dimen/cardCornerRadius_CardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="@dimen/layout_width_imgStress"
                android:src="@drawable/stres_icon"
                android:layout_height="@dimen/layout_height_imgStress"
                android:contentDescription="@string/stres"
                android:layout_marginTop="@dimen/layout_marginTopStatus"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/ket1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_marginLeftStatus"
                android:layout_marginRight="@dimen/layout_marginRightStatus"
                android:layout_marginTop="@dimen/layout_marginTopTextViewKet1"
                android:layout_below="@+id/img_thumbnail"
                android:text="@string/TextView_Describing"
                android:textSize="@dimen/textSizeStatus"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/layout_marginLeftStatus"
                android:layout_marginEnd="@dimen/layout_marginRightStatus"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_marginLeft_TextView_Start_Activity_copyright"
                android:layout_marginLeft="@dimen/layout_marginLeft_TextView_Start_Activity_copyright"
                android:layout_marginTop="@dimen/layout_marginTop_TextView_StartActivity_copyright2"
                android:text="@string/Copyright"
                android:textSize="@dimen/textSize_TextView_Describe2" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>