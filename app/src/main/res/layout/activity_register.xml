<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <include
        android:id="@+id/tollbar"
        layout ="@layout/bar_layout"/>
    <LinearLayout
        android:id="@+id/layout_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tollbar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop_TextView_Register"
        android:text="@string/label_Register_TextView"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textSize_TextView_Register"
        android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_FrameLayout"
            android:layout_margin="@dimen/layout_margin_FrameLayout"
            android:elevation="@dimen/FrameLayout_elevation"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:background="@drawable/white_boarder"
            tools:targetApi="p">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:met_floatingLabel="normal"
                android:hint="@string/TextView_hint_Username"
                android:paddingLeft="@dimen/paddingLeft_EditText"
                android:paddingRight="@dimen/paddingRight_EditText"
                android:paddingStart="@dimen/paddingLeft_EditText"
                android:paddingEnd="@dimen/paddingRight_EditText"
                app:met_baseColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSize_TextView_Register_Username">
            </com.rengwuxian.materialedittext.MaterialEditText>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_FrameLayout"
            android:layout_margin="@dimen/layout_margin_FrameLayout"
            android:elevation="@dimen/FrameLayout_elevation"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:background="@drawable/white_boarder"
            tools:targetApi="p">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:met_floatingLabel="normal"
                android:hint="@string/textView_Email"
                android:paddingLeft="@dimen/paddingLeft_EditText"
                android:paddingRight="@dimen/paddingRight_EditText"
                android:paddingStart="@dimen/paddingLeft_EditText"
                android:paddingEnd="@dimen/paddingRight_EditText"
                app:met_baseColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSize_TextView_Register_Email">
            </com.rengwuxian.materialedittext.MaterialEditText>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_FrameLayout"
            android:layout_margin="@dimen/layout_margin_FrameLayout"
            android:elevation="@dimen/FrameLayout_elevation"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:background="@drawable/white_boarder"
            tools:targetApi="p">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:met_floatingLabel="normal"
                android:hint="@string/textView_Password"
                android:paddingLeft="@dimen/paddingLeft_EditText"
                android:paddingRight="@dimen/paddingRight_EditText"
                android:paddingStart="@dimen/paddingLeft_EditText"
                android:paddingEnd="@dimen/paddingRight_EditText"
                app:met_baseColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSize_TextView_Register_Password">
            </com.rengwuxian.materialedittext.MaterialEditText>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_FrameLayout"
            android:layout_margin="@dimen/layout_margin_FrameLayout"
            android:elevation="@dimen/FrameLayout_elevation"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:background="@drawable/white_boarder"
            tools:targetApi="p">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:met_floatingLabel="normal"
                android:hint="@string/TextView_hint_Mobile"
                android:paddingLeft="@dimen/paddingLeft_EditText"
                android:paddingRight="@dimen/paddingRight_EditText"
                android:paddingStart="@dimen/paddingLeft_EditText"
                android:paddingEnd="@dimen/paddingRight_EditText"
                app:met_baseColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:inputType="textPhonetic"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSize_TextView_Register_Mobile">
            </com.rengwuxian.materialedittext.MaterialEditText>
        </FrameLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/layout_marginTop_RadioGroup"
            android:layout_marginLeft="@dimen/layout_marginLeft_RadioGroup"
            android:layout_marginRight="@dimen/layout_marginRight_RadioGroup"
            android:layout_marginBottom="@dimen/layout_marginBottom_RadioGroup"
            android:padding="@dimen/padding_RadioGroup"
            android:background="@drawable/blue_boarder"
            android:id="@+id/radioButton"
            android:layout_marginEnd="@dimen/layout_marginRight_RadioGroup"
            android:layout_marginStart="@dimen/layout_marginLeft_RadioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_RadioButton_male"
                android:textColor="@color/colorPrimary_Login"
                android:text="@string/male"
                android:buttonTint="@color/colorPrimary_Login"
                android:id="@+id/male"
                tools:targetApi="lollipop"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_RadioButton_female"
                android:textColor="@color/colorPrimary_Login"
                android:text="@string/female"
                android:buttonTint="@color/colorPrimary_Login"
                android:id="@+id/female"
                tools:targetApi="lollipop"/>
        </RadioGroup>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkExpert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop_Checkbox"
                android:layout_marginLeft="@dimen/layout_marginLeft_Checkbox"
                android:layout_marginRight="@dimen/layout_marginRight_Checkbox"
                android:layout_marginStart="@dimen/layout_marginLeft_Checkbox"
                android:layout_marginEnd="@dimen/layout_marginRight_Checkbox"
                android:text="@string/Text_Checkbox_Expert"/>
            <CheckBox
                android:id="@+id/checkUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop_Checkbox"
                android:layout_marginLeft="@dimen/layout_marginLeft_Checkbox"
                android:layout_marginRight="@dimen/layout_marginRight_Checkbox"
                android:layout_marginStart="@dimen/layout_marginLeft_Checkbox"
                android:layout_marginEnd="@dimen/layout_marginRight_Checkbox"
                android:text="@string/Text_Checkbox_User"
                android:layout_toRightOf="@+id/checkExpert"
                android:layout_toEndOf="@+id/checkExpert" />
        </RelativeLayout>

        <ProgressBar
            android:layout_width="@dimen/ProgressBar_layout_width"
            android:layout_height="@dimen/ProgressBar_layout_height"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorPrimaryDark"
            tools:targetApi="lollipop"
            android:visibility="gone"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_FrameLayout_Button"
            android:layout_marginTop="@dimen/layout_marginTop_FrameLayout"
            android:layout_marginLeft="@dimen/layout_marginLeft_FrameLayout"
            android:layout_marginRight="@dimen/layout_marginRight_FrameLayout"
            android:elevation="@dimen/FrameLayout_elevation"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:background="@drawable/blue_boarder"
            tools:targetApi="p"
            android:layout_marginStart="@dimen/layout_marginLeft_FrameLayout"
            android:layout_marginEnd="@dimen/layout_marginRight_FrameLayout">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/textView_Register"
                android:textColor="@color/colorPrimary_Login"
                android:textAllCaps="false"
                android:id="@+id/register"
                android:textSize="@dimen/textSize_Button"
                android:background="?attr/selectableItemBackground"/>
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>