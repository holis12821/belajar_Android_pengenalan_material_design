<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/layout_marginTopLayout"
    android:layout_marginLeft="@dimen/layout_marginLeftSearchUser"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/layout_marginRightSearchUser"
    android:layout_marginStart="@dimen/layout_marginLeftSearchUser"
    android:layout_marginEnd="@dimen/layout_marginRightSearchUser">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/layout_width_Circle_ImageView"
        android:layout_height="@dimen/layout_height_Circle_ImageView"
        android:src="@drawable/profile_image">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginTop="@dimen/layout_marginTopTextViewUsername"
        android:layout_marginLeft="@dimen/layout_marginLeftTextViewSearch"
        android:textSize="@dimen/textSizeTextViewSearch"
        android:layout_marginStart="@dimen/layout_marginLeftTextViewSearch"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="@dimen/textEmailSize"
        android:layout_below="@+id/username"
        android:layout_marginTop="@dimen/layout_marginTopTextViewEmail"
       android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/layout_marginLeftTextViewEmail"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginStart="@dimen/layout_marginLeftTextViewEmail" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="@dimen/layout_width_Circle_ImageView_online"
        android:layout_height="@dimen/layout_height_Circle_ImageView_online"
        android:src="@drawable/online"
        app:civ_border_color="@color/green"
        app:civ_border_width="@dimen/civ_border_width_imageView_online"
        android:layout_below="@+id/username"
        android:layout_marginTop="@dimen/layout_marginTopImageView_online"
        android:layout_marginLeft="@dimen/layout_marginLeftImageViewOnline"
        android:layout_marginStart="@dimen/layout_marginLeftImageViewOnline"
        android:layout_toRightOf="@+id/username"
        android:layout_toEndOf="@+id/profile_image"
        android:visibility="gone">
    </de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline"
        android:layout_width="@dimen/layout_width_Circle_ImageView_online"
        android:layout_height="@dimen/layout_height_Circle_ImageView_online"
        android:src="@drawable/online"
        app:civ_border_color="@color/greyLight"
        app:civ_border_width="@dimen/civ_border_width_imageView_online"
        android:layout_below="@+id/username"
        android:layout_marginTop="@dimen/layout_marginTopImageView_online"
        android:layout_marginLeft="@dimen/layout_marginLeftImageViewOnline"
        android:layout_marginStart="@dimen/layout_marginLeftImageViewOnline"
        android:layout_toRightOf="@+id/username"
        android:layout_toEndOf="@+id/profile_image"
        android:visibility="gone">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginLeft="@dimen/layout_marginLeftTextViewSearch"
        android:textSize="@dimen/textSizeTextViewSearch"
        android:layout_marginStart="@dimen/layout_marginLeftTextViewSearch" />

</RelativeLayout>